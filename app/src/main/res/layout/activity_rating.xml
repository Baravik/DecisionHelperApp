<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate the Importance of the Question"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:textColor="@color/black" />

    <!-- Question Text -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How important is this question to you?"
        android:textSize="16sp"
        android:paddingBottom="24dp"
        android:textColor="@color/black" />

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/rbImportance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />
    
    <!-- Score TextView -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="16dp" />

    <!-- Recommendation TextView -->
    <TextView
        android:id="@+id/recommendationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendation: "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="8dp" />
    
    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Rating"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_gravity="center" />

</LinearLayout>